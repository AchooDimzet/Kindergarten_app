<Page x:Class="Kindergarten_app.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kindergarten_app.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Margin="10" Padding="10" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
            <Border.Background>
                <SolidColorBrush Color="White" Opacity="0.7"/>
            </Border.Background>
            <StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Логин: " FontSize="24"/>
                    <TextBox FontSize="24" Name="TbLogin" Width="200"/>
                </StackPanel>

                <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Пароль: " FontSize="24"/>
                    <PasswordBox FontSize="24" Name="TbPassword" Width="200"/>
                </StackPanel>

                

                <Button Content="Войти" FontSize="24" Margin="5" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
