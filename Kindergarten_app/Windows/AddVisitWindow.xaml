<Window x:Class="Kindergarten_app.Windows.AddVisitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kindergarten_app.Windows"
        mc:Ignorable="d"
        Title="AddVisitWindow" Height="200" Width="600">
    <Grid Margin="10">
        <DockPanel VerticalAlignment="Center">
            <DockPanel DockPanel.Dock="Top" Margin="10 0 10 0">
                <TextBlock Text="Дата занятия: " FontSize="16" FontWeight="Bold"/>
                <DatePicker Name="DatePicker" FontSize="16"/>
            </DockPanel>

            <DockPanel DockPanel.Dock="Top" Margin="10 5">
                <TextBlock Text="Ребенок: " FontSize="16" FontWeight="Bold"/>
                <ComboBox Name="CbKid" DisplayMemberPath="FullName" FontSize="16"/>
            </DockPanel>
            <Button Content="Сохранить" Name="BtnSave" Click="BtnSave_Click" FontSize="16" FontWeight="Bold" Margin="10 20 10 0"/>
        </DockPanel>
    </Grid>
</Window>
